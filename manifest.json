{
  "manifest_version": 3,
  "name": "YT Equity",
  "description": "See who really owns that YouTube channel.",
  "version": "1.0",
  "permissions": [],
  "host_permissions": ["https://raw.githubusercontent.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/data/channels.json", "/icons/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "YT Equity",
    "default_icon": "/icons/icon128.png",
    "default_popup": "popup.html"
  }
}
